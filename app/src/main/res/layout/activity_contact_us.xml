<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:context=".Activities.ContactUs">


    <ImageView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center"
        android:src="@drawable/new_logo"/>

    <TextView
        android:id="@+id/ContactNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_15sdp"
        android:drawableLeft="@drawable/call_icon_contact"
        android:textColor="@color/white"
        android:text="  01014451446 â€“ 01098955428"/>

    <TextView
        android:id="@+id/ContactMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_15sdp"
        android:drawableLeft="@drawable/mail_icon"
        android:textColor="@color/white"
        android:text="  UcarEgypt@Gmail.com"/>

    <TextView
        android:id="@+id/ContactFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_15sdp"
        android:drawableLeft="@drawable/facebook_icon"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:text="  Ucar"/>

    <TextView
        android:id="@+id/ContactInstagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_15sdp"
        android:drawableLeft="@drawable/instagram_icon"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:text="  Ucar.eg"/>

    <TextView
        android:id="@+id/ContactShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_15sdp"
        android:drawableLeft="@drawable/share_button"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:text="  Tell Friends About Us"/>

</LinearLayout>